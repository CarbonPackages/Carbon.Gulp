{
    "info": {
        "author": false,
        "homepage": false,
        "banner":
            "/*!\n * <%= package %> - created by <%= author %>\n * @build <%= timestamp %>\n * @link <%= homepage %>\n */\n"
    },

    "global": {
        "mergeConfigFromPackages": [".src"],
        "notifications": false,
        "browserSync": {
            "enable": true,
            "proxy": "127.0.0.1:8081",
            "proxyRootFolder": "https://",
            "open": false,
            "xip": false
        },
        "chmod": {
            "owner": {
                "read": true,
                "write": true,
                "execute": false
            },
            "group": {
                "read": true,
                "write": false,
                "execute": false
            },
            "others": {
                "read": true,
                "write": false,
                "execute": false
            }
        }
    },

    "root": {
        "base": "./.src/",
        "src": "Resources/Private",
        "dest": "Resources/Public",
        "watch": "Resources/Private/**",
        "dontWatch": "Resources/Private/Templates/**",
        "inlinePath": "Templates/InlineAssets",
        "inlineAssets": false
    },

    "packages": {},

    "tasks": {
        "clean": [
            "Assets",
            "Styles",
            "Scripts",
            "*.css",
            "*.js",
            "*.map",
            "*.js.br",
            "*.js.gz",
            "*.css.br",
            "*.css.gz"
        ],
        "css": {
            "src": "Assets",
            "dest": "Styles",
            "file": null,
            "extensions": ["sass", "scss", "css"],
            "sass": {
                "imagePath": "Assets",
                "precision": 10,
                "sourceComments": true,
                "includePaths": [
                    "./Packages/Sites/",
                    "./Packages/Plugins/",
                    "./node_modules/"
                ]
            },
            "postcss": {
                "activateRtlCss": false,
                "assets": {
                    "loadPaths": [
                        "Assets",
                        "../Private/Sprite",
                        "../Private/Fusion"
                    ],
                    "cachebuster": false
                },
                "magicAnimations": { "atRoot": true },
                "pseudoelements": {
                    "single": true,
                    "selectors": [
                        "before",
                        "after",
                        "first-letter",
                        "first-line"
                    ]
                },
                "rucksack": {
                    "fallbacks": false
                },
                "mqpacker": {
                    "sort": true
                },
                "pxtorem": {
                    "rootValue": 16,
                    "unitPrecision": 5,
                    "propList": [
                        "font",
                        "font-size",
                        "line-height",
                        "letter-spacing"
                    ],
                    "selectorBlackList": [],
                    "replace": true,
                    "mediaQuery": false,
                    "minPixelValue": 0
                },
                "autoprefixer": {},
                "cssnano": {
                    "reduceIdents": false,
                    "zindex": false,
                    "discardComments": {
                        "removeAll": true
                    }
                },
                "fixes": {
                    "preset": "safe"
                },
                "imagemin": {
                    "gifsicle": {},
                    "jpegtran": {},
                    "optipng": {},
                    "svgo": {}
                }
            },
            "cssbeautifyOptions": {
                "indent": "  ",
                "autosemicolon": true
            }
        },
        "scss": true,
        "scssLint": true,
        "jsLint": true,
        "js": {
            "src": "Assets",
            "dest": "Scripts",
            "file": null,
            "extensions": ["js", "jsx"],
            "compiler": "Babel",
            "babel": {},
            "buble": {
                "objectAssign": "Object.assign"
            },
            "rollup": {
                "enable": true,
                "comment": "Available formats are amd, cjs, es6, iife or umd",
                "format": "iife",
                "plugins": {
                    "nodeResolve": {
                        "module": true,
                        "jsnext": true,
                        "main": true,
                        "browser": true
                    },
                    "includePaths": {
                        "include": {},
                        "paths": ["", "Packages/Plugins"],
                        "external": [],
                        "extensions": [".js", ".json", ".jsx"]
                    },
                    "commonjs": {
                        "exclude": "node_modules/process-es6/**",
                        "include": ["node_modules/**"]
                    },
                    "amd": false
                }
            }
        },
        "images": {
            "src": "Images",
            "dest": "Assets",
            "watchOnlySrc": true,
            "extensions": ["jpg", "jpeg", "png", "svg", "gif", "ico"]
        },
        "fonts": {
            "src": "Fonts",
            "dest": "Assets",
            "watchOnlySrc": true,
            "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
        },
        "static": {
            "src": "Static",
            "dest": "Assets",
            "watchOnlySrc": true,
            "extensions": ["*"]
        },
        "optimizeSvg": "src",
        "svgSprite": {
            "src": "Sprite",
            "dest": "Assets",
            "watchOnlySrc": true,
            "svgo": {},
            "extensions": ["svg"]
        },
        "compress": {
            "brotli": {
                "skipLarger": true,
                "quality": 11
            },
            "zopfli": {
                "format": "gzip",
                "numiterations": 15,
                "blocksplitting": true
            }
        },
        "pipeline": ["build", "optimizeImages", "compress"]
    }
}
