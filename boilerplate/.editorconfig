# http://EditorConfig.org

# top-most EditorConfig file
root = true


# Default

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing-whitespace = true
indent_style = tab

# 4 Space; PSR-2
# Use your IDE Code Style Config too..

[*.{php,json}]
indent_style = space
indent_size = 4

# Respect SCSS lint
[*.scss]
indent_style = tab
indent_size = 1

# Exceptions
[*.{yaml,yml,sh,jscsrc}]
indent_style = space
indent_size = 2

[.*rc]
indent_style = space
indent_size = 2

[composer.*]
indent_style = space
indent_size = 4

[Sites.xml]
indent_style = space
indent_size = 1

[*.{note,md,edit,read}]
trim_trailing-whitespace = false
